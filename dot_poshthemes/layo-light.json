{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#ef5350",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#0CA0D8",
          "template": "\uf07b {{ .Path }} ",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 5,
            "folder_separator_icon": "/"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#A5D6A7",
          "template": "{{ .UpstreamIcon }}{{ .HEAD }} {{ .BranchStatus }} {{ if .Working.Changed }}{{ .Working.String }}{{ end }}{{ if or (.Staging.Changed) (gt .StashCount 0) }} :: {{ if .Staging.Changed }}{{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}\ueb4b{{ .StashCount }}{{ end }}{{ end }} ",
          "foreground_templates": [
            "{{ if and (.Working.Changed) (or (gt .Working.Modified 0) (gt .Working.Added 0) (gt .Working.Deleted 0) (gt .Working.Unmerged 0)) }}#FFE082{{ end }}",
            "{{ if .Staging.Changed }}#f78c6c{{ end }}",
            "{{ if or (gt .Ahead 0) (gt .Behind 0) }}#B0BEC5{{ end }}"
          ],
          "properties": {
            "branch_icon": "\ue0a0 ",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "status_formats": {
              "Added": "\uf067%d",
              "Deleted": "\uf068%d",
              "Modified": "\uf040%d",
              "Untracked": "\uf128%d",
              "Unmerged": "\udb80\udcf8%d"
            }
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#FDD835",
          "template": "\udb86\udd9f {{ .FormattedMs }} ",
          "properties": {
            "style": "roundrock",
            "always_enabled": false,
            "threshold": 1000
          }
        },
        {
          "type": "kubectl",
          "style": "plain",
          "foreground": "#F48FB1",
          "template": "\udb82\udc33 {{if .Namespace}}{{.Namespace}}{{end}} :: {{.Context}} ",
          "properties": {
            "parse_kubeconfig": true
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#b2b2be",
          "template": "\ue385 {{ .CurrentDate | date .Format }}",
          "properties": {
            "time_format": "15:04:05"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "python",
          "style": "plain",
          "foreground": "#B39DDB",
          "template": "\ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }} {{ if ne .Venv .Full }}({{ .Venv }}){{ end }}{{ end }} ",
          "properties": {
            "display_mode": "environment"
          }
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "#ffff66",
          "template": "<b></b>"
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "#95ffa4",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#CD4277{{ end }}"
          ],
          "template": "{{ if .Segments.Contains \"Root\" }}ïƒ§{{ else }}\ue285{{ end }} ",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ],
  "version": 2
}
